{% extends 'admin/wizard/base_wizard.html.twig' %}

{% block main %}
    <h3>Step 2: Select Columns & Filters</h3>
    <p>Choose which columns should be included in the visualization.</p>

    {% if available_columns is defined and available_columns|length > 0 %}
        <div class="alert alert-info">
            <strong>Available Columns:</strong> {{ available_columns|join(', ') }}
        </div>
    {% else %}
        <div class="alert alert-danger">
            ⚠️ No columns found! Make sure the data source is valid.
        </div>
    {% endif %}

    {{ parent() }}
{% endblock %}
